---
export interface Props {
  id?: string;
  title: string;
  bullets: string[];
  ctaText: string;
  ctaHref: string;
  imageAlt: string;
}
const { id, title, bullets, ctaText, ctaHref, imageAlt } = Astro.props as Props;
---
<section id={id} class="section-padding reveal" aria-labelledby={`${id}-title`}>
  <div class="container-page grid md:grid-cols-2 gap-10 items-center">
    <div>
      <h2 id={`${id}-title`} class="h2 mb-4">{title}</h2>
      <ul class="space-y-2 mb-6">
        {bullets.map((b) => (
          <li class="flex items-start gap-2 text-white/85">
            <span class="mt-1 h-5 w-5 inline-flex items-center justify-center rounded-full bg-primary/15 text-primary">âœ“</span>
            <span>{b}</span>
          </li>
        ))}
      </ul>
      <a href={ctaHref} class="btn-ghost">{ctaText}</a>
    </div>
    <div class="grid grid-cols-2 gap-4">
      <img src="/brand/ZeroMotion-Outline.png" alt={imageAlt} width="480" height="320" class="card p-2 bg-white/5" loading="lazy" />
      <img src="/brand/ZeroMotion-Layerstyle.png" alt={imageAlt} width="480" height="320" class="card p-2 bg-white/5" loading="lazy" />
      <img src="/brand/Untitled design.png" alt={imageAlt} width="480" height="320" class="col-span-2 card p-2 bg-white/5" loading="lazy" />
    </div>
  </div>
</section> 